@page
@model CityBreaks.Pages.CreateProperty

@{
    ViewData["Title"] = "Criar Propriedade";
}

<h1>Criar Propriedade</h1>
<form action="POST">
    <div>
        <label for="name">Nome</label>
        <input id="name" name="name" type="text" required />
    </div>
    
    <div>
        <label for="pricePerNight">Preço do pernoite: </label>
        <input id="pricePerNight" name="pricePerNight" type="number" step="0.01" required />
    </div>
    
    <div>
        <label>Cidade:</label>
        @if (@Model.Cities.Any()){
            <select name="cityId">
                @foreach (var city in @Model.Cities){
                    <option value="@city.Id">@city.CityName</option>
                }
            </select>
        }
    </div>
    
    <button type="submit" class="btn btn-primary">Criar Propriedade</button>
</form>